{% extends 'base.html.twig' %}

{% block body %}
    <!-- Modal Box -->
    <div id="myModal" class="modal" style="display: block;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h1 >Evaluer cette offre</h1>
            {{ form_start(fff, {'attr': {'class': 'my-form-class'}}) }}
                {{ form_label(fff.rating, 'Rating : ') }}
                {{ form_widget(fff.rating) }}
                {{ form_widget(fff.submit) }}
            {{ form_end(fff) }}
            <form action="{{ path('app_readoc') }}">
                <button class="b-danger">Annuler</button>
            </form>
        </div>
    </div>
    <form action="{{ path('app_readoc') }}">
                <button class="b-danger">Retour</button>
            </form>
    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
{% endblock %}