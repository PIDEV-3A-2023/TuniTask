{% extends 'base.html.twig' %}

{% block body %}
    <h1 id="h1">La liste des Offres</h1>
    <div class="card-deck">
     {% if result is defined %}
        {% for k in result %}
            <div class="card mb-4">
                <img src="{{ k.srcimage }}" class="card-img-top" alt="Image utilisateur">
                <div class="card-body">
                    <h5 class="card-title">{{ k.titre }}</h5>
                    <p class="card-text">Description :{{ k.description }}</p>
                    <p class="card-text">Salaire : {{ k.salaireh }}dt/h</p>
                    <p class="card-text">Post√© par {{ k.firstName }} {{ k.lastName }}</p>
                    Rating:
                    {% for i in 1..5 %}
                        {% if k.rating >= i %}
                            <i class="fas fa-star"></i>
                        {% else %}
                            <i class="far fa-star"></i>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="card-footer">
                    <form  action="{{path('app_addc',{'id':k.idoffre}) }}">
                        <button class="b">Voir plus</button>
                    </form>
                    <!-- Trigger/Open The Modal -->
                    <form  action="{{path('app_addR',{'id':k.idoffre}) }}">
<button id="myBtn" class="b">Evaluer</button>
 </form>
<!-- The Modal -->
{% if fff is defined %} 
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    
   {{form(fff)}}
   
  </div>

 </div>
 {% endif %}
                </div>
            </div>
        {% endfor %}
         {% endif %}
    </div> 
         {%block js%}
<script>
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>
{%endblock%}        
{% endblock %}


